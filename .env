# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings (PostgreSQL for production)
USE_POSTGRES=False
DB_NAME=attendance_db
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@attendance.com

# Redis/Cache Settings
USE_REDIS=False
REDIS_URL=redis://127.0.0.1:6379/1

# Celery Settings
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Time Zone
TIME_ZONE=UTC

# Attendance Settings
LATE_ARRIVAL_TIME=09:15
HALF_DAY_HOURS=4

# Leave Settings
DEFAULT_ANNUAL_LEAVE=20
DEFAULT_SICK_LEAVE=10
DEFAULT_CASUAL_LEAVE=10

# Sentry (Error Tracking)
USE_SENTRY=False
SENTRY_DSN=your-sentry-dsn-here

# Production Settings
# Uncomment and configure these for production deployment
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
